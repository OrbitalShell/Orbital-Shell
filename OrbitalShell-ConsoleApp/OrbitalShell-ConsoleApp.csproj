<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!--<TargetFramework>netstandard2.1</TargetFramework>-->
    <!--<TargetFramework>net5.0</TargetFramework>-->
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>OrbitalShell</RootNamespace>
    <AssemblyName>OrbitalShell-ConsoleApp</AssemblyName>    
    <NeutralLanguage>en-US</NeutralLanguage>
    <IsPackable>true</IsPackable>
    <Authors>Orbital Shell team</Authors>
    <Company>franck.gaspoz@gmail.com, gaspard moyrand</Company>
    <Product>Orbital Shell - ConsoleApp</Product>
    <Description>Orbital Shell is a command shell based inspired by bash and POSIX recommendations, coded in C# .Net Core and.Net Standard 2.1</Description>
    <Copyright>(c) 2020 Licence MIT</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Component/Parser/ANSI/ansi-seq-patterns.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Scripting" Version="3.7.0-1.final" />
  </ItemGroup>

</Project>
